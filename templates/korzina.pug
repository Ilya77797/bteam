doctype html
html

    head
        meta(charset="utf-8")
        meta( id="VP" name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
        title Заказ товара BATTERY TEAM - Тула
        link(href="css/font.css" rel="stylesheet" type="text/css")
        link(href="css/style.min.css" rel="stylesheet" type="text/css")
        link(href="css/product.css" rel="stylesheet" type="text/css")
        link(href="css/hm-style.min.css" rel="stylesheet" type="text/css")
        link(href="css/pagination.css" rel="stylesheet" type="text/css")
        link(rel="shortcut icon" type="image/x-icon" href="/favicon.ico")
        script(src="js/jquery.min.js")
        script(src="js/korzina.js")
        script(src="js/phoneFormat/jquery.maskedinput.js")
        script(src="js/phoneFormat/jquery.maskedinput.min.js")
        script(src="https://code.jquery.com/mobile/1.0a1/jquery.mobile-1.0a1.min.js")


    body.hm
        div#content
            header
                div#header
                    div#logo.logo
                        h1

                            a(href="http://www.bteam.ru/") BATTERY TEAM
                        h3
                            a(href="http://www.bteam.ru/") Тульский Региональный Филиал

                    if(isLoged)
                        div.loginForm
                            form(action="/logout:korz" method="POST" id="loginForm")
                                h3 Добро пожаловать, #{name}
                                button(type="submit") Выйти
                                a#settings(href='#') Настройки
                            form(action="/userSettings" method="POST" id="Change")
                                a#settings(href='#') Сохранить
                    else
                        div.loginForm
                            form(action="/login:korz" method="POST" id="loginForm")
                                h2 Вход
                                if(noUser)
                                    h4(style="color:red") Неправильное имя или пароль
                                    input(name="username" placeholder="Имя пользователья" )
                                    input(name="password" type="password" placeholder="Пароль" )
                                    button(type="submit") Войти
                                else
                                    input(name="username" placeholder="Имя пользователья")
                                    input(name="password" type="password" placeholder="Пароль")
                                    button(type="submit") Войти
            div(style='clear:both')
                hr.line
            div.topMenu.clearfix(style="display:block")
                div
                a.backToProduct(href="/") Назад к товарам
            ul#PR.table-layout.clearfix
            form.formOrder(name='checkout', id="OrderForm")
                input.textbox(name="name" placeholder="Укажите ваше ФИО" required)
                input.textbox(name="emailaddress" placeholder="Укажите ваш Email" required)
                input#phone.textbox(name="phone" placeholder="Укажите ваш телефон" required)
                textarea.message(rows="4" cols="50" name="subject" placeholder="Коментарий к заказу:" required)
                input.buttonSend(name="submit"  type="submit" value="Отправить")



